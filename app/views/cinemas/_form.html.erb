<%= form_for @cinema, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :ville, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ville, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :adresse, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :adresse, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :seancehoraire, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :seancehoraire, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nom, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nom, :class => 'text_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cinemas_path, :class => 'btn' %>
  </div>
<% end %>
