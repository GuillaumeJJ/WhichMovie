<%- model_class = Cinema -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ville) %>:</strong></dt>
  <dd><%= @cinema.ville %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nom) %>:</strong></dt>
  <dd><%= @cinema.nom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:adresse) %>:</strong></dt>
<iframe src="<%=@cinema.adresse%>" width="600" height="450" frameborder="0" style="border:0"></iframe>
  <dt><strong><%= model_class.human_attribute_name(:seancehoraire) %>:</strong></dt>
  <dd><%= @cinema.seancehoraire %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              cinemas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cinema_path(@cinema), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cinema_path(@cinema),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
