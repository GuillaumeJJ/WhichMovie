<% if params[:cinema_id] %>
  <%= form_for [@cinema,@seance], :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :heure, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :heure, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :film_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :film_id, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :cinema_id, :class => 'control-label' %>
      <div class="controls">
        <%= @seance.cinema_id %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  cinema_seances_path(@cinema), :class => 'btn' %>
    </div>
  <% end %>
<% elsif params[:film_id] %>
  <%= form_for [@film,@seance], :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :heure, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :heure, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :film_id, :class => 'control-label' %>
      <div class="controls">
        <%= @seance.film_id %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :cinema_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :cinema_id, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  film_seances_path(@film), :class => 'btn' %>
    </div>
  <% end %>
<% end %>
