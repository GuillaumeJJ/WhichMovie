<%- model_class = Film -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:titre) %></th>
      <th><%= model_class.human_attribute_name(:realisateur) %></th>
      <th><%= model_class.human_attribute_name(:acteurs) %></th>
      <th><%= model_class.human_attribute_name(:affiche) %></th>
      <th><%= model_class.human_attribute_name(:datesortie) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= link_to film.id, film_path(film) %></td>
        <td><%= film.titre %></td>
        <td><%= film.realisateur %></td>
        <td><%= film.acteurs %></td>
        <td><img src="<%= film.affiche %>" style="width:300px" /></td>
        <td><%= film.datesortie %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_film_path(film), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      film_path(film),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_film_path,
            :class => 'btn btn-primary' %>
